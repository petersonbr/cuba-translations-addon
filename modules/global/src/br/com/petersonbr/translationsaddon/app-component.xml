<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.cuba">

    <module name="global" blocks="*">
        <artifact name="cuba-translations-addon-global" appJar="true"/>

        <property name="cuba.persistenceConfig" value="+br/com/petersonbr/translationsaddon/persistence.xml"/>
        <property name="cuba.metadataConfig" value="+br/com/petersonbr/translationsaddon/metadata.xml"/>
        <property name="cuba.viewsConfig" value="+br/com/petersonbr/translationsaddon/views.xml"/>
    </module>
    <module name="core" dependsOn="global" blocks="core">
        <artifact name="cuba-translations-addon-core" appJar="true"/>
        <artifact name="cuba-translations-addon-core" classifier="db" ext="zip" configuration="dbscripts"/>

        <property name="cuba.springContextConfig" value="+br/com/petersonbr/translationsaddon/spring.xml"/>
        <property name="cuba.mainMessagePack" value="+br.com.petersonbr.translationsaddon.core"/>
    </module>
    <module name="web" dependsOn="global" blocks="web">
        <artifact name="cuba-translations-addon-web" appJar="true"/>
        <artifact name="cuba-translations-addon-web" classifier="web" ext="zip" configuration="webcontent"/>

        <property name="cuba.springContextConfig" value="+br/com/petersonbr/translationsaddon/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig"
                  value="+br/com/petersonbr/translationsaddon/web-dispatcher-spring.xml"/>
        <property name="cuba.windowConfig" value="+br/com/petersonbr/translationsaddon/web-screens.xml"/>
        <property name="cuba.menuConfig" value="+br/com/petersonbr/translationsaddon/web-menu.xml"/>
        <property name="cuba.permissionConfig" value="+br/com/petersonbr/translationsaddon/web-permissions.xml"/>
        <property name="cuba.mainMessagePack" value="+br.com.petersonbr.translationsaddon.web"/>
    </module>
</app-component>